% cheat-sheet: http://www.cpt.univ-mrs.fr/~masson/latex/Beamer-appearance-cheat-sheet.pdf

\mode<presentation>

% custom color
\definecolor{calmBlue}{RGB}{171, 205, 239}
\definecolor{nightBlue}{RGB}{18, 52, 86}
\definecolor{bowcalmBlack}{RGB}{8, 8, 8}
\definecolor{bowcalmWhite}{RGB}{247, 247, 247}

% ===== Beamer's Colors from here ===== %

% --- Structure of the presentation --- %

%% Color palettes
\setbeamercolor*{palette primary}{
  use = structure,
  fg  = nightBlue!90!bowcalmWhite,
  bg  = calmBlue!10!bowcalmWhite
}
\setbeamercolor*{palette secondary}{
  use = structure,
  fg  = bowcalmWhite,
  bg  = nightBlue!70!calmBlue
}
\setbeamercolor*{palette tertiary}{
  use = structure,
  fg  = bowcalmWhite,
  bg  = nightBlue
}
\setbeamercolor*{palette quaternary}{
  use = structure,
  fg  = bowcalmWhite,
  bg  = nightBlue
}
\setbeamercolor*{palette sidebar primary}{
  use = structure,
  fg  = nightBlue!80!bowcalmWhite,
  bg  = calmBlue!20!bowcalmWhite
}
\setbeamercolor*{palette sidebar secondary}{
  use = structure,
  fg  = nightBlue,
  bg  = bowcalmWhite
}
\setbeamercolor{palette sidebar tertiary}{}
\setbeamercolor{palette sidebar quaternary}{}

%% Global definitions
\setbeamercolor*{normal text}{
  fg = bowcalmBlack,
  bg = white
}
\setbeamercolor*{titlelike}{
  use = structure,
  fg  = nightBlue,
  bg  = bowcalmWhite
}
\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

%% Title page
\setbeamercolor*{title page}{
  fg = nightBlue!50!bowcalmBlack,
  bg = nightBlue!50!bowcalmWhite
}
\setbeamercolor*{titlelike}{}
\setbeamercolor*{title}{}
\setbeamercolor*{subtitle}{}
\setbeamercolor*{author}{}
\setbeamercolor*{institute}{}
\setbeamercolor*{date}{}

%% Part, section, subsection pages
\setbeamercolor{part page}{}
\setbeamercolor{section page}{}
\setbeamercolor{subsection page}{}

%% Table of contents
\setbeamercolor{section in toc}{}
\setbeamercolor{subsection in toc}{}
\setbeamercolor{subsubsection in toc}{}
\setbeamercolor{section in toc shaded}{}
\setbeamercolor{subsection in toc shaded}{}
\setbeamercolor{subsubsection in toc shaded}{}
\setbeamercolor{section number projected}{}

%% Bibliography
\setbeamercolor{bibliography entry author}{}
\setbeamercolor{bibliography entry title}{}
\setbeamercolor{bibliography entry location}{}
\setbeamercolor{bibliography entry note}{}
\setbeamercolor{bibliography item}{}

%% Note page
\setbeamercolor{note page}{}

% --- Structure of a frame --- %

%% Background
\setbeamercolor{background canvas}{
  bg = white
}
  \setbeamercolor{background}{}

%% Headlines and footlines
\setbeamercolor{headline}{}
\setbeamercolor{footline}{}
