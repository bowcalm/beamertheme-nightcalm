\setbeamercolor{subsection in head/foot}{}
\setbeamercolor{subsubsection in head/foot}{}

%% Navigation symbols
\setbeamercolor{navigation symbols}{}

%% Logo
\setbeamercolor{logo}{}

% --- Elements of a frame --- %

%% Frame title
\setbeamercolor*{frametitle}{
  fg = nightBlue,
  bg = bowcalmWhite
}
\setbeamercolor{frametitle right}{}
\setbeamercolor*{framesubtitle}{
  fg = nightBlue!80!bowcalmWhite,
  bg = bowcalmWhite
}
\setbeamercolor{frametitle continuation}{}
\setbeamercolor{titlelike}{}

%% Abstract
\setbeamercolor{abstract}{}
\setbeamercolor{abstract title}{}

%% Hyperlinks and buttons
\setbeamercolor{button}{
  fg = calmBlue!30!bowcalmWhite,
  bg = nightBlue!80!bowcalmBlack
}
\setbeamercolor{button border}{
  fg = bowcalmWhite
}

%% Lists
\setbeamercolor{itemize item}{}
\setbeamercolor{itemize subitem}{}
\setbeamercolor{itemize subsubitem}{}
