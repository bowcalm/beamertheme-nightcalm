  \setbeamercolor{item projected}{}
    \setbeamercolor{subitem projected}{}
      \setbeamercolor{subsubitem projected}{}
  \setbeamercolor{subitem}{}
    \setbeamercolor{subsubitem}{}

%% Highlighting
\setbeamercolor*{structure}{
  fg = nightBlue,
  bg = nightBlue!20!bowcalmWhite
}
\setbeamercolor{local structure}{}
\setbeamercolor*{alerted text}{
  fg = red!85!nightBlue,
  bg = red
}

%% Blocks environments
\setbeamercolor{block title}{
  use = structure,
  fg  = bowcalmWhite,
  bg  = nightBlue
}
\setbeamercolor{block body}{
  use = block title,
  fg  = bowcalmBlack,
  bg  = calmBlue!10!bowcalmWhite
}
\setbeamercolor{block title alerted}{
  use = alerted text,
  fg  = bowcalmWhite,
  bg  = red!75!nightBlue
}
\setbeamercolor{block body alerted}{
  use = block title alerted,
  fg  = bowcalmBlack,
  bg  = block title alerted.bg!10!bowcalmWhite
}
\setbeamercolor*{example text}{
  fg = green!85!nightBlue,
  bg = green
}
\setbeamercolor{block title example}{
  use = example text,
  fg  = bowcalmWhite,
  bg  = green!55!nightBlue
}
\setbeamercolor{block body example}{
  use = block title example,
  fg  = bowcalmBlack,
  bg  = block title example.bg!10!bowcalmWhite
}

%% Theorem environments
\setbeamercolor{qed symbol}{}

%% Figures and tables
\setbeamercolor{caption}{}
\setbeamercolor{caption name}{}

%% Verse, quotations and quotes
\setbeamercolor{verse}{}
\setbeamercolor{quotation}{}
\setbeamercolor{quote}{}

%% Footnotes
\setbeamercolor{footnote}{}
\setbeamercolor{footnote mark}{}

%% Mathematics
\setbeamercolor{math text}{}
  \setbeamercolor{math text inlined}{}
  \setbeamercolor{math text displayed}{}
\setbeamercolor{normal text in math text}{}

